{
  "name": "@appril/dev",
  "version": "0.2.3",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.9",
    "npm": "10"
  },
  "files": [
    "pkg/*",
    "tsconfig.*.json"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    },
    "./tsconfig.app.json": {
      "default": "./tsconfig.app.json"
    },
    "./tsconfig.base.json": {
      "default": "./tsconfig.base.json"
    },
    "./tsconfig.lib.json": {
      "default": "./tsconfig.lib.json"
    },
    "./tsconfig.src.json": {
      "default": "./tsconfig.src.json"
    }
  },
  "scripts": {
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "esbundler lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "tsc -p lib/tsconfig.json",
    "// ✨ publish": "",
    "prepub": "npm run build",
    "pub": "npm pub"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "kleur": "^4.1.5",
    "mustache": "^4.2.0",
    "unplugin-vue-router": "^0.7.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/pgts": "^0.2.3",
    "@appril/scripts": "^0.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "path-scurry": "^1.10.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  },
  "peerDependencies": {
    "@appril/scripts": "^0.2.2"
  }
}
