{
  "name": "@appril/dev",
  "version": "0.2.4",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*",
    "tsconfig.*.json"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    },
    "./tsconfig.app.json": {
      "default": "./tsconfig.app.json"
    },
    "./tsconfig.base.json": {
      "default": "./tsconfig.base.json"
    },
    "./tsconfig.lib.json": {
      "default": "./tsconfig.lib.json"
    },
    "./tsconfig.src.json": {
      "default": "./tsconfig.src.json"
    }
  },
  "scripts": {
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "esbundler lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "tsc -p lib/tsconfig.json"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "after:release": [
        "mkdir -p var/pub",
        "npm pack --pack-destination var/pub"
      ]
    }
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^6.1.3",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.11",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "kleur": "^4.1.5",
    "mustache": "^4.2.0",
    "unplugin-vue-router": "^0.7.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/pgts": "^0.2.5",
    "@appril/scripts": "^0.2.4",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.10.7",
    "path-scurry": "^1.10.1",
    "release-it": "^17.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  }
}
