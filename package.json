{
  "name": "@appril/dev",
  "version": "0.2.10",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ builders": "",
    "esbuilder": "func() { e=$1; shift; esbuild lib/$e.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text --sourcemap=inline $*; }; func",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; npm run tsc; for e in index worker; do npm run esbuilder $e; done"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^6.1.3",
    "@vueuse/core": "^10.9.0",
    "crc": "^4.3.2",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0",
    "ts-to-zod": "^3.7.3",
    "typescript": "^5.4.2",
    "unplugin-vue-router": "^0.8.4",
    "vite": "^5.1.5",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@appril/configs": "^0.2.6",
    "@biomejs/biome": "^1.6.0",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.15.0",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.25",
    "release-it": "^17.1.1"
  },
  "peerDependencies": {
    "qs": "^6.12.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.3"
  }
}
