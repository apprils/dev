{
  "name": "@appril/dev",
  "version": "0.2.9",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/lib/index.d.ts",
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/lib/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ lint": "",
    "lint": "biome lint ./lib",
    "// ✨ build": "",
    "esbundler": "func() { e=$1; shift; esbuild $e --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text $*; }; func",
    "prebuild": "set -e; npm run lint; tsc; mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "npm run esbundler -- lib/index.ts --sourcemap=inline --outdir=pkg"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^6.1.3",
    "@vueuse/core": "^10.7.2",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.1",
    "esbuild": "^0.20.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "mustache": "^4.2.0",
    "path-scurry": "^1.10.1",
    "ts-to-zod": "^3.7.0",
    "typescript": "^5.3.3",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^5.0.12",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.3",
    "@biomejs/biome": "^1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.14.0",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.16",
    "release-it": "^17.0.3"
  },
  "peerDependencies": {
    "qs": "^6.11.2",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.0"
  }
}
