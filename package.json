{
  "name": "@appril/dev",
  "version": "0.2.7",
  "description": "Appril Dev",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "directories": {
    "bin": "pkg/bin"
  },
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/index.d.ts",
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ build": "",
    "esbundler": "func() { e=$1; shift; esbuild $e --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text $*; }; func",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "npm run esbundler -- lib/index.ts --sourcemap=inline --outdir=pkg",
    "postbuild": "tsc"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "after:release": [
        "mkdir -p var/pub",
        "npm pack --pack-destination var/pub"
      ]
    }
  },
  "dependencies": {
    "@appril/prettier-config": "^0.2.2",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "chokidar": "^3.5.3",
    "dotenv": "^16.4.1",
    "esbuild": "^0.19.12",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "mustache": "^4.2.0",
    "path-scurry": "^1.10.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^5.0.12",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.14.0",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.7",
    "release-it": "^17.0.3"
  }
}
